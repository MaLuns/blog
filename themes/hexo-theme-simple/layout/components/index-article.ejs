<article class="shadow">
    <header class="post-header">
        <div class="post-container">
            <h2 class="post-title">
                <% if(index){%>
                    <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                <%}else{%>
                    <%- post.title %>
                <%}%>
            </h2>
            <div class="post-meta">
                <span class="post-push-time">
                    <time datetime="<%= date_xml(post.date) %>" title="<%= date_xml(post.date) %>" itemprop="datePublished">
                        <%= date(post.date,config.date_format) %>
                    </time>
                    <span class="post-meta-divider">•</span>
                </span>
                <%if(theme.post_wordcount.wordcount){%>
                <span class="post-wordcount">
                    <span class="post-meta-item-text"><%- __('post.word_count',wordcount(post.content)) %></span>
                    <span class="post-meta-divider">•</span>
                </span>
                <%}%>
                <%if(theme.post_wordcount.min2read){%>
                <span class="post-consuming-time">
                    <span class="post-meta-item-text"><%- __('post.min2read',min2read(post.content)) %></span>
                </span>
                <%}%>
            </div>
        </div>
    </header>
    <div class="post-content <%- index?'':'post-content-detail' %>">
        <% if(index){%>
            <%if(post.excerpt){%>
                <%-  post.excerpt %>
            <%}else{%>
                <%- post.content.substring(0,200)%>
                <%- post.content.length>200?'...':'' %>
            <%}%>
        <%}else{%>
            <%- post.content %>
        <%}%>
    </div>
</article>