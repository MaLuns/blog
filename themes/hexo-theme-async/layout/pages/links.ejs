
<div class="trm-content-start">

    <!-- banner -->
    <%- partial('../components/banner', { 
        bgurl: 'https://images.unsplash.com/photo-1621266309424-52f5a2e6d7f6?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=3150&q=80' , 
        bannerTitle: '莫愁前路无知己，<br>天下谁人不识君。',
        bannerText: 'friendly link'
    }) %>
    <!-- banner end -->

    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <!-- main card -->
                <%- partial('../components/sidebar') %>
                <!-- main card end -->
            </div>
            <div class="col-lg-8">
                <!-- content -->
                <div class="trm-content" id="trm-content">
                    <div data-scroll data-scroll-repeat data-scroll-offset="500" id="about-triger"></div>

                    <div class="row trm-mb-40">
                        <div class="col-lg-12">
                            <blockquote class="trm-scroll-animation" data-scroll data-scroll-offset="40">
                                友链要求：
                                <br>
                                暂不接受个人博客以外的友链申请，确保您的网站内容积极向上，文章至少30篇，原创70%以上，部署HTTPS。
                            </blockquote>
                        </div>
                    </div>

                    <div class="row trm-mb-20">
                        <div class="col-lg-12">
                            <h5 class="trm-mb-40 trm-title-with-divider"><%-__('site.title')%><span data-number="01"></span></h5>
                        </div>
                        <div class="col-lg-12">
                            <div class="trm-service-icon-box trm-scroll-animation trm-active-el" data-scroll="" data-scroll-offset="40">
                                <ul class="trm-list">
                                    <li><%-__('site.webmaster')%>：<%- theme.user.name %></li>
                                    <li><%-__('site.domain')%>：<%- theme.user.domain %></li>
                                    <li><%-__('site.avatar')%>：<%- theme.user.avatar %></li>
                                    <li><%-__('site.describe')%>：<%- theme.user.desc %></li>
                                </ul>
                            </div>
                        </div>    
                    </div>

                    <div class="row trm-mb-20">
                        <div class="col-lg-12">
                            <h5 class="trm-mb-40 trm-title-with-divider">友情链接<span data-number="02"></span></h5>
                        </div>

                        <% theme.links.forEach(item=>{%>
                            <div class="col-lg-6">
                                <a href='<%- item.url %>' target='_blank' rel="nofollow">
                                    <div class="trm-service-icon-box trm-scroll-animation trm-p-20" data-scroll data-scroll-offset="40">
                                        <div class="trm-service-content">
                                            <div class="trm-icon">
                                                <img draggable="false" alt="<%- item.name %>" src="<%- item.image %>">
                                            </div>
                                            <div class="trm-service-text">
                                                <h6 class="trm-mb-10"><%- item.name %></h6>
                                                <div><%- truncate(item.desc,{length:32}) %></div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <%})%>
                    </div>

                    <%- partial('../components/comment',{ titleHide: false }) %>

                    <div class="trm-divider trm-mb-40"></div>

                    <!-- footer -->
                    <%- partial('../components/footer') %>
                    <!-- footer end -->

                </div>
                <!-- content end -->
            </div>
        </div>
    </div>
</div>
