<article class="shadow links-card">
    <header class="post-header">
        <div class="post-container">
            <h2 class="post-title">
                友情链接
            </h2>
        </div>
    </header>
    <div>
        <ul class="links-list">
            <% theme.links.forEach(item=>{%>
            <li class="links-list-item">
                <a href='<%- item.url %>' target='_blank'>
                    <img class="" src="<%- item.image %>">
                    <div>
                        <h3><%- item.name %></h3>
                        <p><%- item.desc %></p>
                    </div>
                </a>
            </li>
            <%})%>
        </ul>
        <div style="padding: 15px 0 15px 20px;background: #000;margin: 20px 0;border-radius: 4px;">
            欢迎互换友链
        </div>
        <blockquote>
            <p> 我的信息</p>
            <p> 头像：<%- theme.url%><%- theme.user.avatar%></p>
            <p> 名称：<%- theme.user.name %></p>
            <p> 简介：<%- theme.user.desc %></p>
            <p> 网址：<%- theme.url%></p>
        </blockquote>
    </div>
</article>
<com-comment env='<%- theme.env %>' hash='<%- page.hash %>'>
    <h2 slot="list-header">
        <i class="iconfont cg-comment" style="font-size: 20px;"></i>
        评论
    </h2>
</com-comment>