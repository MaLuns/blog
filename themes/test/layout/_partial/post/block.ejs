<div class="post-block">
    <%- partial('title', {class_name: 'post-title'}) %>
    <div class="">
        <% if(is_home()){ %>
            <%if(post.excerpt){%>
                <%- post.excerpt %>
                <div class="post-button text-center">
                    <a class="btn" href="<%- url_for(post.path) %><% if(theme.scroll_to_more){%>#more<%}%>" rel="contents">
                            <%- __('post.read_more') %> &raquo;
                    </a>
                </div>
            <%}else{%>
                <%- post.content %>
            <%}%>
        <% } %>
        <% if(is_post()){ %>
            <%- post.content %>
            <% if(post.prev || post.next){ %>
                <div class="prev-next-content">
                    <div class="btn-prev">
                        <% if(post.prev){ %>
                            <a href="<%- url_for(post.prev.path) %>">
                            <i class="cg-paging-left iconfont"></i> <%- post.prev.title %>
                            </a>
                        <% } else{%>
                            <span></span>
                        <%}%>
                    </div>
                    <div class="btn-next">
                        <% if(post.next){ %>
                            <a href="<%- url_for(post.next.path) %>">
                            <%- post.next.title %> <i class="cg-paging-right iconfont"></i>
                            </a>
                        <% } else{%>
                            <span></span>
                        <%}%>
                    </div>
                </div>
            <% } %>
            
        <% } %>
        <% if(is_tag()){ %>
            is_tagis_tagis_tagis_tagis_tagis_tag
        <% } %>
        <% if(is_category()){ %>
            is_categoryis_categoryis_categoryis_categoryis_category
        <% } %>
    </div>
</div>