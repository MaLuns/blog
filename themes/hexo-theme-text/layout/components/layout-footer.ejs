<div id="aplayer-fixed"></div>
<script type="text/javascript">
    function show_date_time() {
        window.setTimeout("show_date_time()", 1000);
        BirthDay = new Date("11/19/2019 17:00:00");
        today = new Date();
        timeold = (today.getTime() - BirthDay.getTime());
        sectimeold = timeold / 1000
        secondsold = Math.floor(sectimeold);
        msPerDay = 24 * 60 * 60 * 1000
        e_daysold = timeold / msPerDay
        daysold = Math.floor(e_daysold);
        e_hrsold = (e_daysold - daysold) * 24;
        hrsold = `00${Math.floor(e_hrsold)}`;
        e_minsold = (e_hrsold - hrsold) * 60;
        minsold = `00${Math.floor((e_hrsold - hrsold) * 60)}`;
        seconds = `00${Math.floor((e_minsold - minsold) * 60)}`;
        since.innerHTML = daysold + "天" + hrsold.substr(hrsold.length - 2, 2) + "小时" + minsold.substr(minsold.length - 2, 2) + "分" + seconds.substr(seconds.length - 2, 2) + "秒";
    }
    show_date_time();
</script>