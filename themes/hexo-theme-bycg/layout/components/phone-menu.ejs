<script>
    document.getElementById("phone-menu-btn").addEventListener("click", function () {
        $("#phone-menu-list").css({ height: "100vh", opacity: 1 });
        $("#phone-menu-list a").removeClass('action');
        let arr = location.pathname.split('/');
        if (arr.length > 1) {
            $("#phone-menu-list a[href='/" + arr[1] + "']").addClass('action')
        }
    })
    document.getElementById("phone-menu-list").addEventListener("click", function (e) {
        $("#phone-menu-list").css({ height: "0", opacity: 0 })
    })
</script>