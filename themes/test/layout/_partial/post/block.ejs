<div class="post-block">
    <%- partial('title', {class_name: 'post-title'}) %>
    <div>
        <% if(is_home()){ %>
            <%if(post.excerpt){%>
                <%- post.excerpt %>
                <div class="post-button text-center">
                    <a class="btn" href="<%- url_for(post.path) %><% if(theme.scroll_to_more){%>#more<%}%>" rel="contents">
                            <%- __('post.read_more') %> &raquo;
                    </a>
                </div>
            <%}else{%>
                <%- post.content %>
            <%}%>
        <% } %>
        <% if(is_post()){ %>
            <%- post.content %>
            <% if(post.prev || post.next){ %>
                <div>
                    <% if(post.prev){ %>
                        <a href="<%- url_for(post.prev.path) %>">
                            <%- post.prev.title %>
                        </a>
                    <% } %>
                </div>
                <div>
                    <% if(post.next){ %>
                        <a href="<%- url_for(post.next.path) %>">
                            <%- post.next.title %>
                        </a>
                    <% } %>
                </div>
            <% } %>
            
        <% } %>
        <% if(is_tag()){ %>
            is_tagis_tagis_tagis_tagis_tagis_tag
        <% } %>
        <% if(is_category()){ %>
            is_categoryis_categoryis_categoryis_categoryis_category
        <% } %>
    </div>
</div>